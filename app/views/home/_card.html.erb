<div class="group cursor-pointer transition-transform transform hover:scale-105 bg-grey-50">
    <%= link_to path, class: "block bg-gray-50 shadow-md rounded-2xl overflow-hidden hover:shadow-lg transition-shadow duration-300" do %>
        <img src="<%= image_path(image) %>" alt="<%= title %>" class="w-full h-48 object-cover">
        <div class="p-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors"><%= title %></h3>
            <p class="text-gray-600 text-sm"><%= description %></p>
        </div>
    <% end %>
</div>
